
#include <stdio.h>

int main()
{
    int size,i,j,limit,values[100],temp;
    printf("enter the size of the array:");
    scanf("%d",&limit);
    
    printf("enter the array1 :");
    for(i=0;i<limit;i++)
    {
        scanf("%d",&values[i]);
    }
    
    printf("enter the array2 :");
    for(i=0;i<limit;i++)
    {
        scanf("%d",&values[i]);
    }
    
    for(i=0;i<limit;i++)
    {
        for(j=i+1;j<limit-1;j++){
            if(values[i]>values[j])
            {
                temp=values[i];
    values[i]=values[j];
    values[j]=temp;
    
            }
            
        }
    }
    
    printf("sorted array:");
    for(i=0;i<limit;i++){
        printf("%d \t",values[i]);
    }
    
    return 0;
}
